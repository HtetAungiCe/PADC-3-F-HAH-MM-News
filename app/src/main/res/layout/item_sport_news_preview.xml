<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_sport_news_item_root"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_sport_news_preview_image"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sportimage" />

    <TextView
        android:id="@+id/tv_preview_news_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/iv_sport_news_preview_image"
        android:lineSpacingMultiplier="1.2"
        android:text="Manchester United enquire after javier."
        android:textColor="@color/primary_text"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_preview_one_football"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_preview_news_title"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/ic_insert_emoticon_24dp"
        android:drawablePadding="8dp"
        android:text="Onefootball"
        android:textColor="@color/secondary_text"
        android:textSize="12sp" />

    <View
        android:id="@+id/v_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_preview_one_football"
        android:layout_marginTop="8dp"
        android:background="@color/black_full" />

</RelativeLayout>