<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_sport_news_item_root"
    android:layout_width="match_parent"
    android:layout_height="720dp"
    android:layout_margin="16dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:showDividers="middle">

        <RelativeLayout
            android:id="@+id/rl_sport_news"
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <TextView
                android:id="@+id/tv_sport_new_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_toys_black_24dp"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:text="Top News" />

            <ImageView
                android:id="@+id/iv_sport_new_item_cover"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                android:layout_below="@id/tv_sport_new_item_category"
                android:scaleType="centerCrop"
                android:src="@drawable/sportimage" />

            <TextView
                android:id="@+id/tv_sport_new_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_sport_new_item_cover"
                android:lineSpacingMultiplier="1.2"
                android:padding="12dp"
                android:text="Manchester United enquire after javier Hernandez."
                android:textColor="@color/primary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sport_new_item_app_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:drawableLeft="@drawable/ic_insert_emoticon_24dp"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:text="Onefootball"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:id="@+id/v_seperator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_forget_password"
            android:background="@color/black_full" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sport_news_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.v7.widget.CardView>