<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_margin="8dp"
    android:layout_height="230dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/v_seperator"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/tv_forget_password"
            android:background="@color/primary" />

        <TextView
            android:id="@+id/tv_news_title_inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v_seperator"
            android:layout_margin="8dp"
            android:text="Nuclear Weapones/"
            android:textColor="@color/primary_dark"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_news_brief_inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_news_title_inter"
            android:layout_below="@+id/tv_news_title_inter"
            android:lineSpacingMultiplier="1"
            android:text="Us to Lossen and develop more 'useable' weheads."
            android:textColor="@color/black_full"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/time"
            android:layout_alignLeft="@+id/tv_news_title_inter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_news_brief_inter"
            android:text="15 hr"
            android:textColor="@color/secondary_text"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"/>

        <ImageView
            android:id="@+id/iv_nuclear_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/time"
            android:layout_marginTop="4dp"
            android:src="@drawable/nuclearimage"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>